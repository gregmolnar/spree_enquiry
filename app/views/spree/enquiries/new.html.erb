<%= form_for @enquiry, :html => {:method => :post} do |f| %>
  <%= render "spree/shared/error_messages", :target => @enquiry %>

  <p>
    <%= f.label t 'spree_enquiry.email' %> <span class="required">*</span><br />
    <%= f.text_field :email, :maxlength => "255", :size => "50" %>
  </p>

  <p>
    <%= f.label t 'spree_enquiry.subject' %> <span class="required">*</span><br />
    <%= f.text_field :subject, :maxlength => "255", :size => "50" %>
  </p>
  
  <p>
    <%= f.label t 'spree_enquiry.body' %> <span class="required">*</span><br />
    <%= f.text_area :body, :wrap => "virtual", :rows => "10", :cols => "50" %>
  </p>

  <p>
    <%= f.submit t('spree_enquiry.send'), :class => "button bg_darkfirst" %>
  </p>
<% end %>
